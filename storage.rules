rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // قواعد لصور المحادثات
    match /chat-images/{chatId}/{fileName} {
      allow read: if true; // أي شخص يمكنه القراءة
      allow write: if true; // السماح بالرفع (المصادقة عبر النظام الداخلي)
    }

    // قواعد للملفات الصوتية
    match /chat-audio/{chatId}/{fileName} {
      allow read: if true;
      allow write: if true; // السماح بالرفع (المصادقة عبر النظام الداخلي)
    }

    // قواعد للملفات العامة
    match /chat-files/{chatId}/{fileName} {
      allow read: if true;
      allow write: if true; // السماح بالرفع (المصادقة عبر النظام الداخلي)
    }

    // قواعد لصور الموظفين (الصور الشخصية)
    match /employees/{employeeId}/avatar {
      allow read: if true;
      allow write: if true; // السماح بالرفع (المصادقة عبر النظام الداخلي)
    }
    
    // قواعد لصور السلايدر (للمطورين)
    match /slider-images/{fileName} {
      allow read: if true; // يمكن لأي شخص القراءة
      allow write, delete: if true; // السماح بالرفع والحذف (المصادقة تتم عبر النظام الداخلي)
    }

    // قواعد لصور الغرف (كتالوج الغرف)
    match /rooms/{fileName} {
      allow read: if true; // يمكن لأي شخص القراءة
      allow write, delete: if true; // السماح بالرفع والحذف
    }

    // قواعد لصور القوائم (menu items)
    match /menu-items/{fileName} {
      allow read: if true;
      allow write, delete: if true;
    }

    // قواعد لشعارات الفنادق (hotel logos)
    match /hotel-logos/{fileName} {
      allow read: if true;
      allow write, delete: if true;
    }

    // منع الوصول لأي مسارات أخرى
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
