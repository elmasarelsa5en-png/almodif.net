    "electron-builder": "^26.0.12",
    "eslint": "^8.0.0",
    "eslint-config-next": "15.5.4",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.0.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.almodif.smarthost",
    "productName": "AL Modif Smart Host",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron-main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/app-logo.png"
    }
