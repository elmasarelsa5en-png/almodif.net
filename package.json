    "lucide-react": "^0.469.0",
    "mammoth": "^1.11.0",
    "next": "15.5.4",
    "puppeteer": "^24.26.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-dropzone": "^14.3.8",
    "recharts": "^3.3.0",
