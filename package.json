{
  "name": "almudif-whatsapp-host",
  "version": "0.1.0",
  "private": true,
  "main": "electron-main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:mobile": "set BUILD_MODE=mobile && next build",
    "export": "next export",
    "start": "next start",
    "lint": "next lint",
    "deploy-help": "node deploy-helper.js",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "mobile:build": "npm run build:mobile && npx cap sync",
    "mobile:android": "npm run mobile:build && npx cap open android",
    "mobile:ios": "npm run mobile:build && npx cap open ios"
  },
  "dependencies": {
