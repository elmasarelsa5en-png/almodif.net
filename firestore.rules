rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // قواعد للمستخدمين - يمكن للمستخدمين المصادق عليهم قراءة وكتابة بياناتهم الخاصة
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // قواعد للغرف - يمكن للمستخدمين المصادق عليهم قراءة وكتابة جميع الغرف
    match /rooms/{roomId} {
      allow read, write: if request.auth != null;
    }

    // قواعد للحجوزات - يمكن للمستخدمين المصادق عليهم قراءة وكتابة جميع الحجوزات
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null;
    }

    // قواعد للعملاء - يمكن للمستخدمين المصادق عليهم قراءة وكتابة جميع بيانات العملاء
    match /guests/{guestId} {
      allow read, write: if request.auth != null;
    }

    // قواعد للفواتير - يمكن للمستخدمين المصادق عليهم قراءة وكتابة جميع الفواتير
    match /invoices/{invoiceId} {
      allow read, write: if request.auth != null;
    }

    // قواعد للمدفوعات - يمكن للمستخدمين المصادق عليهم قراءة وكتابة جميع المدفوعات
    match /payments/{paymentId} {
      allow read, write: if request.auth != null;
    }

    // قواعد للإعدادات - يمكن للمستخدمين المصادق عليهم قراءة وكتابة الإعدادات
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }

    // قواعد للإشعارات - يمكن للمستخدمين المصادق عليهم قراءة وكتابة الإشعارات
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }

    // قواعد لطلبات النزلاء - يمكن للمستخدمين المصادق عليهم قراءة وكتابة جميع الطلبات
    match /guestRequests/{requestId} {
      allow read, write: if request.auth != null;
    }

    // قاعدة عامة للمستندات غير المحددة - محظورة
    match /{document=**} {
      allow read, write: if false;
    }
  }
}